<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body class="h-screen bg-gray-100 font-opensans">
    <%- include('./partials/nav.ejs') %>
    <section class="relative courses-wrapper mt-24 h-screen">
      <h2 class="font-bold md:text-6xl text-5xl text-center pt-8 tracking-wide text-gray-800">
        Courses
      </h2>
      <div class="course-sec grid grid-cols-1 md:grid-cols-3 w-4/5 mx-auto py-12 md:py-24 md gap-6">
      </div>
      <div class="pre-loader -top-1/4 left-0 md:top-1/2 md:left-1/2 transform md:-translate-x-1/2 md:-translate-y-1/2 absolute z-10 inset-0 flex items-center justify-center md:w-1/4">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200">
          <radialGradient id="a12" cx=".66" fx=".66" cy=".3125" fy=".3125" gradientTransform="scale(1.5)">
            <stop offset="0" stop-color="#7f1d1d"></stop>
            <stop offset=".3" stop-color="#7f1d1d" stop-opacity=".9"></stop>
            <stop offset=".6" stop-color="#7f1d1d" stop-opacity=".6"></stop>
            <stop offset=".8" stop-color="#7f1d1d" stop-opacity=".3"></stop>
            <stop offset="1" stop-color="#7f1d1d" stop-opacity="0"></stop>
          </radialGradient>
          <circle transform-origin="center" fill="none" stroke="url(#a12)" stroke-width="15" stroke-linecap="round" stroke-dasharray="200 1000" stroke-dashoffset="0" cx="100" cy="100" r="70">
            <animateTransform type="rotate" attributeName="transform" calcMode="spline" dur="2" values="360;0" keyTimes="0;1" keySplines="0 0 1 1" repeatCount="indefinite"></animateTransform>
          </circle>
          <circle transform-origin="center" fill="none" opacity=".2" stroke="#7f1d1d" stroke-width="15" stroke-linecap="round" cx="100" cy="100" r="70"></circle>
        </svg>
      </div>
      
    </section>
    <%- include('./partials/footer.ejs') %>
    <script src="/js/coursesSec.js"></script>
  </body>
</html>
