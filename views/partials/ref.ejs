<div class="wrapper-ref grid md:grid-cols-2 rounded-md overflow-hidden shadow-xl bg-white">
    <div class="img-container">
        <img src="/img/carousal/<%= img_ %>" class="w-full h-full object-cover" alt="" srcset="">
    </div>
    <div class="text-container p-5 mx-auto">
        <h2 class="text-4xl font-semibold uppercase mb-4"><%= heading %></h2>        
        <% data.forEach(floor=> { %>
            <h3 class="font-semibold text-2xl mb-2"><%= floor.floor%></h3>
            <ul class="list-disc">
                <% floor.facilities.forEach(facility => { %>
                    <li class="ml-10 mb-1"><%= facility %></li>
                <% }); %>
            </ul>
            <% }); %>
    </div>
</div>